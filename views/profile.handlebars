<body>
	<div class="header">
		<a role="button" href="/">
			<span class="glyphicon glyphicon-arrow-left" id="left-arrow"></span>
		</a>
		<a role="button" href="profile.html">
			<span class="glyphicon glyphicon-user center" id="profile"></span>
		</a>
	</div>

	<h1> Your Makeup Profile </h1>

	<div class="questions">
		<ul>
			<li>
				<div class="question">Foundation
					<input class="check" type="checkbox">
				</div>
			</li>
			<li>
				<div class="question">Concealer
					<input class="check" type="checkbox">
				</div>
			</li>
			<li>
				<div class="question">Eyeliner
					<input class="check" type="checkbox">
				</div>
			</li>
			<li>
				<div class="question">Blush
					<input class="check" type="checkbox">
				</div>
			</li>
			<li>
				<div class="question">Mascara
					<input class="check" type="checkbox">
				</div>
			</li>

			<li>
				<div class="question">Lipstick
					<div class="btn-group" role="group">
						<button type="button" class="btn select">Light</button>
						<button type="button" class="btn select">Medium</button>
						<button type="button" class="btn select">Dark</button>
						<button type="button" class="btn select">None</button>
					</div>
				</div>
			</li>

			<li>
				<div class="question">Eyeshadow
					<div class="btn-group" role="group">
						<button type="button" class="btn select">Light</button>
						<button type="button" class="btn select">Medium</button>
						<button type="button" class="btn select">Dark</button>
						<button type="button" class="btn select">None</button>
					</div>
				</div>
			</li>
		</ul>
	</div>
	<footer>
		<a href="/">
			<button type="button" class="btn footerbutton">
