<body>
	<div class="header">
		<a role="button" href="{{link}}">
			<span class="glyphicon glyphicon-arrow-left" id="left-arrow"></span>
		</a>
		<a role="button" href="/home">
			<span class="glyphicon glyphicon-home" id="home"></span>
		</a>
	</div>
	<div class="main-title">
		<h3 id="header-title"> Your <span style="text-transform: uppercase;" id="whited">{{title}}</span> Look </h3>
	</div>

	<div class="img">
		<img src="{{imageURL}}" id="look-image">
	</div>

	<div class="steps">
		<ul>
			{{#each steps}}
				<li class = "step">{{this}}</li>
			{{/each}}
		</ul>
	</div>
	<div class ="container">
			<iframe src = "{{videoURL}}" height="100%" width="100%" frameBorder="0">

	</div>

	<footer>
		<a href = "/home">
			<button class ="btn btn-primary btn-lg btn-block full-width">Done</button>
		</a>
	</footer>
